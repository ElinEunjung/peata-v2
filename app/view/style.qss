QWidget {
    background-color: #121212;
    font-family: 'Segoe UI';
    font-size: 15px;
    margin: 0px;
    padding: 0px;
}

QLabel {
    font-family: 'calibri';
    font-size: 25px;
    font-weight: bold;
    text-align: center;
    color: #E0E0E0;
}

QLineEdit {
    padding: 10px;
    border: 1px solid #ccc;
    border-radius: 5px;
    background-color: #fff;
}

QPushButton {
    background-color: #0078d7;
    color: white;
    padding: 8px 16px;
    border: none;
    border-radius: 6px;
    font-weight: bold;
    font-size: 18px;
}

QPushButton:hover {
    background-color: #005a9e;
}

QPushButton#logic-group-btn {
    margin-bottom: 10px
}

/* === main.py === */
QLabel#welcomeLabel {
    font-size: 40px;
}

/* === login_ui.py === */
QLabel#loginTitle {
    font-size: 50px;
    font-family: Helvetica;
    font-weight: bold;
}

QLabel#loginButton {
    font-size: 12px;
    font-weight: bold;
    font-family: Helvetica;
}

/* === navbar.py (Buttons) === */
QToolButton {
    background-color: #0078d7;
    color: white;
    padding: 10px;
    border: none;
    border-radius: 5px;
    font-weight: bold;
    text-align: center;
}

QToolButton:hover {
    background-color: #005a9e;
}

QToolButton:pressed {
    background-color: #003f7d;
}

QToolButton:disabled {
    background-color: #5a5a5a;
    color: lightgrey;
}

/* === about_us_ui.py === */
QLabel#aboutTitle,
QLabel#howtoTitle,
QLabel#devTitle {
    font-size: 32px;
    font-weight: bold;
}

QLabel#aboutText,
QLabel#howtoText,
QLabel#devText {
    font-size: 22px;
}

QLabel#versionLabel {
    font-size: 20px;
    font-weight: bold;
    color: #f0f0f0; /* light gray for dark background */
    padding-top: 10px;
    border-top: 1px solid #444;
    margin-top: 30px;
}

QLabel#copyrightLabel {
    font-size: 20px;
    font-weight: medium;
    color: #dddddd;
    padding-bottom: 20px;
}

/* === video_query_ui.py (checkboxes in the fields selection) === */
QGroupBox#FieldGroup {
    border: 2px solid #2d89ef;
    border-radius: 8px;
    margin-top: 12px;
    padding: 12px;
    font-weight: bold;
    font-size: 20px;
    color: white;
    background-color: #1e1e1e;
}

QGroupBox QCheckBox {
    color: #dddddd;
    font-size: 15px;
    font-weight: bold;
    spacing: 5px;
}

/* === litte one in the filter box === */
QPushButton#RemoveButton {
    font-size: 14px;
    padding: 2px 6px;
}

QTextEdit {
    font-family: "Courier New";
    font-size: 11pt;
    color: #333;
    background-color: #f9f9f9;    
}

QProgressBar {
    border: none;
    border-radius: 10px;
    background-color: #181818;
    height: 30px;
    text-align: center;
    font: bold 14px;
    padding: 2px
}

QProgressBar::chunk {
    background: qlineargradient(
        spread:pad,
        x1:0, y1:0, x2:1, y2:0,
        stop:0 #76c7c0,
        stop:1 #67a6f7
    );
    border-radius: 10px;
}

QGroupBox {
    font-size: 20px;
    font-weight: bold;
    padding-top: 15px; 
    border: 1px solid #ccc;
    border-radius: 5px;
    margin-top: 10px;
    color: white;
}

QGroupBox::title {
    subcontrol-origin: margin;
    subcontrol-position: top left;
    padding: 4px;
    color: #FFB86C;
    font-weight: bold;
    font-size: 25px;
}

#titleLabel {
    font-size: 60px;
    font-weight: bold;
    color: #ff0050;
    padding:10px 50px 0;             
}

#subtitleLabel {
    font-size: 30px;
    font-weight: normal;
    color: #00f2ea;
    padding: 0;
    border-bottom: 2px solid #aaa;
}

#load_status_label {
    font-size: 15pt;
    color: white;
    padding: 4px 8px;
    border-radius: 4px;
    qproperty-alignment: 'AlignCenter';
}

QLabel#selectedRegionLabel {
    font-style: italic;
    color: #7A5E99; 
}

QLabel#HelperLabel {
    color:#D0D0FF; /* soft lavender */
    font-size: 23px;
    font-style: italic;
    margin-bottom: 20px;
    padding-top: 10px;
}

/* === Horizontal line, like <hr> === */
#HorizontalLine {
    border: none;
    background-color: #2e2e2e;
    height: 1px;
    margin-top: 8px;
    margin-bottom: 8px;
}

/* === ComboBox  === */
QComboBox {
    background-color: white;
    color: black;
    font-size: 18px;
    border: 1px solid #555;
    min-height: 32px; 
    padding: 4px 8px; 
}

QComboBox QAbstractItemView {
    background-color: #333;
    color: white;
    selection-background-color: #555;
}

/* === DateEdit === */
QDateEdit {
    background-color: white;
    color: black;
    font-size: 18px;
    min-height: 32px;
    padding: 4px 8px;
}

/* === ComboBox inside the Calendar === */
QCalendarWidget QComboBox {
    background-color: white;
    color: black;
    font-size: 16px;
    min-height: 28px;
}


/* === ScrollBar - Vertical === */
QScrollBar:vertical {
    background: #f0f0f0;
    width: 12px;
    margin: 2px 0 2px 0;
    border-radius: 6px;
}

QScrollBar::handle:vertical {
    background: #a0a0a0;
    min-height: 20px;
    border-radius: 6px;
}

QScrollBar::handle:vertical:hover {
    background: #888888;
}

QScrollBar::add-line:vertical, QScrollBar::sub-line:vertical {
    background: none;
    height: 0px;
}

/* === ScrollBar - Horizontal === */
QScrollBar:horizontal {
    background: #f0f0f0;
    height: 12px;
    margin: 0 2px 0 2px;
    border-radius: 6px;
}

QScrollBar::handle:horizontal {
    background: #a0a0a0;
    min-width: 20px;
    border-radius: 6px;
}

QScrollBar::handle:horizontal:hover {
    background: #888888;
}
QScrollBar::add-line:horizontal, QScrollBar::sub-line:horizontal {
    background: none;
    width: 0px;
}

#RunQueryButton {
    background-color: #4CAF50;
    color: white;
    border-radius: 5px;
}

#ClearQueryButton {
    background-color: #f44336;
    color: white;
    border-radius: 5px;
}

/* === Result Table Styling === */
QTableView {
    background-color: white;
    color: black;
    gridline-color: #ccc;
    alternate-background-color: #f5f5f5;
}


QCheckBox {
    color: white;
    font-size: 18px;
}

